{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module": "es6",
    "lib": ["es6", "es2016", "es2017"],
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "src": [ "src/*" ],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
		"declaration": true,
		"declarationDir": "dist/types"
  },
  "include": [ "src" ]
}
